<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context=".Register">

    <TextView
        android:id="@+id/register_name_label"
        android:layout_width="95dp"
        android:layout_height="33dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="600dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="13dp"
        android:text="Nombre"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darker_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.069"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.485" />

    <TextView
        android:id="@+id/register_email_label"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="65dp"
        android:text="Email"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darker_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/register_email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="160dp"
        android:layout_height="160dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintBottom_toTopOf="@+id/register_email_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/register_btn"
        android:layout_width="256dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="42dp"
        android:background="@drawable/btn_style"
        android:text="Registrarse"
        android:textColor="@color/dark_grey"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_pass" />

    <EditText
        android:id="@+id/register_pass"
        android:layout_width="256dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:inputType="textPassword"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/register_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_pass_label" />

    <EditText
        android:id="@+id/register_name"
        android:layout_width="256dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:inputType="text"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/register_country_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name_label" />

    <EditText
        android:id="@+id/register_email"
        android:layout_width="256dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/et_style"
        android:ems="10"
        android:inputType="text|textEmailAddress"
        android:padding="12dp"
        app:layout_constraintBottom_toTopOf="@+id/register_name_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_email_label" />

    <TextView
        android:id="@+id/register_country_label"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="2dp"
        android:text="País"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darker_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/register_country"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_name"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/register_gender_label"
        android:layout_width="77dp"
        android:layout_height="32dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="1dp"
        android:text="Genero"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darker_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/register_gender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.063"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_country"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/register_pass_label"
        android:layout_width="141dp"
        android:layout_height="30dp"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="2dp"
        android:text="Contraseña"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:textColor="@color/darker_green"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/register_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.092"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/register_gender" />

    <Spinner
        android:id="@+id/register_gender"
        android:layout_width="256dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="490dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/et_style"
        android:entries="@array/genders"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/register_pass_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Spinner
        android:id="@+id/register_country"
        android:layout_width="256dp"
        android:layout_height="47dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="410dp"
        android:layout_marginEnd="65dp"
        android:background="@drawable/et_style"
        android:entries="@array/countries"
        android:spinnerMode="dialog"
        app:layout_constraintBottom_toTopOf="@+id/register_gender_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>